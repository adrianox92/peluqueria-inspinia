<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Gestión de los usuarios</h5>
  </div>
  <div class="ibox-content">

    <div id="table" class="">

      <table class="table table-striped">
        <tr>
          <th>Nombre</th>
          <th>Rol</th>
          <th>Activo</th>
          <th>
            <%= link_to new_gestion_servicio_path, :title => 'Añadir nuevo usuario' do %>
                <span class="nuevo glyphicon glyphicon-plus"></span>
            <% end %></th>
        </tr>
        <% usuario.each do |p| %>
            <tr id="precio_<%= p.id %>">
              <td><%= p.nombre %></td>
              <td><%= p.rol_id %></td>
              <td><%= boolean_to_human(p.activo).html_safe %></td>
              <td>
                <%= link_to edit_gestion_usuario_path(p.id), :title => 'Editar usuario' do %>
                    <span class="editar fa fa-edit"></span>
                <% end %>
                <%= link_to gestion_usuario_path(p.id), :confirm => "¿Estas seguro?", :method => :destroy, remote: true, :title => 'Eliminar usuario' do %>
                    <span class="eliminar glyphicon glyphicon-remove"></span>
                <% end %>

              </td>
            </tr>
        <% end if usuario.count > 0 %>
      </table>
    </div>

  </div>
</div>