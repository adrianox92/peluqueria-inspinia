<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Gestión de los pagos</h5>
  </div>
  <div class="ibox-content">

    <div id="table" class="table-editable">

      <table class="table table-striped">
        <tr>
          <th>Nombre</th>
          <th>Pago</th>
          <th>Último pago</th>
          <th>Periodicidad</th>
          <th>Activo</th>
          <th>
            <%= link_to new_gestion_pago_path, :title => 'Añadir nuevo pago' do %>
                <span class="nuevo glyphicon glyphicon-plus"></span>
            <% end %></th>
        </tr>
        <% pago.each do |p| %>
            <tr id="producto_<%= p.id %>">
              <td><%= p.nombre %></td>
              <td><%= number_to_currency(p.pago, :unit => '€') %></td>
              <td><%= fecha_legible(p.ultimo_pago) %></td>
              <td><%= p.periodicidad %></td>
              <td><%= boolean_to_human(p.activo).html_safe %></td>
              <td>
                <%= link_to edit_gestion_pago_path(p.id), :title => 'Editar pago' do %>
                    <span class="editar fa fa-edit"></span>
                <% end %>
                <%= link_to gestion_pago_path(p.id), :confirm => "¿Estas seguro?", :method => :destroy, remote: true, :title => 'Eliminar pago' do %>
                    <span class="eliminar glyphicon glyphicon-remove"></span>
                <% end %>

              </td>
            </tr>
        <% end if pago.count > 0 %>
        <!-- This is our clonable table line -->
        <tr class="hide">
          <td contenteditable="true">Untitled</td>
          <td contenteditable="true">undefined</td>
          <td>
            <span class="table-remove glyphicon glyphicon-remove"></span>
          </td>
        </tr>
      </table>
    </div>

  </div>
</div>