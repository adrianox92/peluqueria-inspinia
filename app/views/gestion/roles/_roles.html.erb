<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Gestión de los roles para los usuarios</h5>
  </div>
  <div class="ibox-content">

    <div id="table" class="">

      <table class="table table-striped">
        <tr>
          <th>Nombre</th>
          <th>Cliente</th>
          <th>
            <%= link_to new_gestion_rol_path, :title => 'Añadir nuevo rol' do %>
              <span class="nuevo glyphicon glyphicon-plus"></span>
            <% end %></th>
        </tr>
        <% rol.each do |p| %>
          <tr id="permiso_<%= p.id %>">
            <td><%= p.nombre %></td>
            <td><%= p.cliente.nombre %></td>
            <td>
              <%= link_to edit_gestion_rol_path(p.id), :title => 'Editar rol' do %>
                <span class="editar fa fa-edit"></span>
              <% end %>
              <%= link_to gestion_rol_path(p.id), :confirm => "¿Estas seguro?", :method => :destroy, remote: true, :title => 'Eliminar rol' do %>
                <span class="eliminar glyphicon glyphicon-remove"></span>
              <% end %>

            </td>
          </tr>
        <% end if rol.count > 0 %>
      </table>
    </div>

  </div>
</div>