<div class="ibox float-e-margins">
  <div class="ibox-title">
    <h5>Gestión de los productos</h5>
  </div>
  <div class="ibox-content">

    <div id="table" class="table-editable">

      <table class="table table-striped">
        <tr>
          <th>Nombre</th>
          <th>Precio compra</th>
          <th>Código</th>
          <th>Stock</th>
          <th>Activo</th>
          <th>
            <%= link_to new_gestion_tinte_path, :title => 'Añadir nuevo tinte' do %>
                <span class="nuevo glyphicon glyphicon-plus"></span>
            <% end %></th>
        </tr>
        <% tinte.each do |p| %>
            <tr id="producto_<%= p.id %>">
              <td><%= p.nombre %></td>
              <td><%= p.precio_compra %></td>
              <td><%= p.codigo %></td>
              <td><%= p.stock %></td>
              <td><%= boolean_to_human(p.activo).html_safe %></td>
              <td>
                <%= link_to edit_gestion_tinte_path(p.id), :title => 'Editar producto' do %>
                    <span class="editar fa fa-edit"></span>
                <% end %>
                <%= link_to gestion_tinte_path(p.id), :confirm => "¿Estas seguro?", :method => :destroy, remote: true, :title => 'Eliminar tinte' do %>
                    <span class="eliminar glyphicon glyphicon-remove"></span>
                <% end %>

              </td>
            </tr>
        <% end if tinte.count > 0 %>
      </table>
    </div>

  </div>
</div>