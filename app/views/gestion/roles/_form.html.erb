<%= simple_form_for :rol, url: (@rol.new_record? ? gestion_roles_path(@rol) : gestion_rol_path(@rol)), method: (@rol.new_record? ? :post : :put), html: {class: 'form-horizontal'} do |f| %>
  <div class="ibox float-e-margins">
    <div class="ibox-content">
      <div class="row">
        <div class="col-xs-6">
          <%= f.input :nombre, placeholder: 'Nombre del permiso', input_html: {class: 'form-control m-b-md'} %>
        </div>
        <%= f.button :submit, 'Guardar', class: 'btn btn-w-m btn-primary center-block' %>
      </div>
    </div>
  </div>
<% end %>